# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/aeterna_db?schema=public"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aeterna_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=your-private-key-for-signing-transactions
ETHEREUM_NETWORK=mainnet
SMART_CONTRACT_ADDRESS=0x...
GAS_LIMIT=21000
GAS_PRICE=20000000000

# WebSocket Configuration
WS_PORT=3001
WS_ORIGINS=http://localhost:3000,http://localhost:3001

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
BCRYPT_SALT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# External APIs
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
METRICS_ENABLED=true